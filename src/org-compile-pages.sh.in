if [ "$1" = "-h" ]; then
    echo "Usage: org-compile-pages.sh [file.org]"
    exit 1
fi

autorg=%autorg_path%

buildstamp=$autorg/src/.build.stamp

PATH="$autorg/src:$PATH"

org_export_all()
{
    for file in $@; do
        for fmt in ascii html pdf; do
            org-export-as.sh $fmt $file
        done
    done
}

if [ -z $1 ]; then # no file specified, make all *.org

    cd $autorg

    find_org_files='find doc pub src -type f -name "*.org"'
    if [ -f $buildstamp ]; then
        find_org_files="$find_org_files -newer $buildstamp"
    fi
    files=`$find_org_files -print`
    echo " II Exporting multiple files: $files"
    test -z $files || org_export_all $files
    touch $buildstamp
else
    echo " II Exporting one file: $1"
    org_export_all $1
fi
